<CustomButton@Button>
	color: 1, 0, 0, 1
	size_hint: 0.10, 0.05
	spacing: 5

<CustomWidget@Widget>
	bg_color_before: 0, 1, 0, 1
	canvas.before:
		Color:
			rgba: self.bg_color_before
		Rectangle:
			pos:root.pos 
			size:root.size
	bg_color_after: 1, 0, 0, 1

	# lr range: (1/3, 4/3)
	# Currently there's no way to block this lr value to stop at its limits by the button press
	# Needs a solution to prevent the shape becoming weird
	tl: 0
	degree: 0
	canvas.after:
		Color:
			rgba: self.bg_color_after 
		Quad:
			points: self.width/3, self.height/2, self.width/3.0, self.height*1.5, self.width-root.tl, self.height*1.5, self.width, self.height/2

<FloatLayout>:
	CustomButton:
		id: _more_left
		text: ""
		background_normal : ''
		background_color : 1, 0, 0, 1
		pos_hint:{"x":0.1, "y":0.1}
		on_press: root.damnwrong() 
	
	CustomButton:
		id: _more_right
		text: ""
		background_normal : ''
		background_color : 0, 1, 0, 1
		pos_hint:{"x":0.21, "y":0.1}
		on_press: root.damnright()

	CustomWidget:
		id:cw
		bg_color_before: (0, 1, 0, 1)
		bg_color_after: (1, 0, 0, 1)
		pos_hint:{"x":0.2, "y":0.3}
		size_hint: (0.6, 0.6)


	
